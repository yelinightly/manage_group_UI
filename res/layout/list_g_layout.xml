<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/groupimageview"
        android:layout_width="32dp"
        android:layout_height="32dp" 
        android:layout_alignParentLeft="true"
		android:layout_marginLeft="8dp"/>
    <TextView
        android:id="@+id/name_list_G"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/groupimageview"
		android:layout_marginLeft="20dp" 
        android:text="GListName"
        android:textSize="20dp" />
    
    <TextView
        android:id="@+id/number_list_G"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/name_list_G"
		android:layout_marginLeft="20dp" 
        android:text="GListNo."
        android:textSize="20dp" />



</RelativeLayout>
