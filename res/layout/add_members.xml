<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <RelativeLayout
        android:id="@+id/relativeLayout_addm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/add_member_text1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/member_name_label" />
        
        <EditText
            android:id="@+id/member_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_member_text1"
            android:ems="10" >
        </EditText>

        <TextView
        	android:id="@+id/add_member_text2"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
            android:layout_below="@+id/member_name"
        	android:text="@string/member_number_label" />
        
        <EditText
        	android:id="@+id/member_number"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:layout_below="@+id/add_member_text2"
        	android:ems="10" >
        </EditText>

    </RelativeLayout>    

    <Button
        android:id="@+id/member_save_button"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
		android:layout_below="@+id/relativeLayout_addm"
        android:background="@color/clear_bgsel"
        android:text="Save" />


</RelativeLayout>